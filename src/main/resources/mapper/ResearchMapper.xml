<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.xbn.dao.ResearchDao">
        <insert id="addResearch" parameterType="com.xbn.pojo.ResearchInfo" >
         insert into  lab_research_info (lab_id,research_name,research_author,reseach_type,research_publicationname,research_publicationtime,research_awardingunit,research_way,research_content) values(#{labId},#{researchName},#{researchAutho},#{researchType},#{researchPublicationName},#{researchPublicatuinTime},#{awardingUnit},#{researchWay},#{researchContent})
            <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
                SELECT LAST_INSERT_ID()
            </selectKey>
        </insert>
    <select id="selResearchByPage" parameterType="com.xbn.pojo.PageInfo" resultType="com.xbn.pojo.ResearchInfo">
        select * from lab_research_info
        <where >
           <if test="labId!=null and labId!=''">
       and lab_id=#{labId}
       </if>
        <if test="researchName!=null and researchName!=''">
       and research_name=#{researchName}
       </if>
            <if test="researchAutho!=null and researchAutho!=''">
                and research_author=#{researchAutho}
            </if>
       </where>
        limit #{pageStart},#{pageSize}
   </select>
    <select id="count" resultType="java.lang.Integer">
        select count(*) from lab_research_info
    </select>
   </mapper>
